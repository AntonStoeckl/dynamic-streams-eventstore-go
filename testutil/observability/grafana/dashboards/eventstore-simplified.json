{
  "id": null,
  "title": "EventStore Performance Dashboard",
  "tags": ["eventstore", "performance", "operations"],
  "timezone": "browser",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "refresh": "5s",
  "panels": [
    {
      "id": 1,
      "title": "Append Operations/sec",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(eventstore_append_method_calls_total[1m])",
          "legendFormat": "Append() Calls/sec",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 10},
              {"color": "green", "value": 50}
            ]
          }
        }
      },
      "options": {
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      }
    },
    {
      "id": 2,
      "title": "Query Operations/sec",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(eventstore_query_method_calls_total[1m])",
          "legendFormat": "Query() Calls/sec",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0},
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 10},
              {"color": "green", "value": 50}
            ]
          }
        }
      },
      "options": {
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      }
    },
    {
      "id": 3,
      "title": "Operation Success Rate",
      "type": "gauge",
      "targets": [
        {
          "expr": "(rate(eventstore_append_duration_seconds_count{status=\"success\"}[1m]) + rate(eventstore_query_duration_seconds_count{status=\"success\"}[1m])) / (rate(eventstore_append_method_calls_total[1m]) + rate(eventstore_query_method_calls_total[1m])) * 100",
          "legendFormat": "Success Rate %",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0},
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "unit": "percent",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "yellow", "value": 90},
              {"color": "green", "value": 95}
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 4,
      "title": "Average Operation Duration", 
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(eventstore_append_duration_seconds_sum[1m]) / rate(eventstore_append_duration_seconds_count[1m]) * 1000",
          "legendFormat": "Append Avg (ms)",
          "refId": "A"
        },
        {
          "expr": "rate(eventstore_query_duration_seconds_sum[1m]) / rate(eventstore_query_duration_seconds_count[1m]) * 1000",
          "legendFormat": "Query Avg (ms)",
          "refId": "B"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": {"mode": "palette-classic"},
          "min": 0
        }
      },
      "options": {
        "legend": {
          "displayMode": "visible",
          "placement": "bottom"
        }
      }
    },
    {
      "id": 5,
      "title": "Concurrency Conflicts/sec",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(eventstore_concurrency_conflicts_total[1m])",
          "legendFormat": "Conflicts/sec",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 6},
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "options": {
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value"
      }
    },
    {
      "id": 6,
      "title": "Error Rate by Type",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(eventstore_database_errors_total[1m])",
          "legendFormat": "{{error_type}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 6},
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {"mode": "palette-classic"},
          "min": 0
        }
      },
      "options": {
        "legend": {
          "displayMode": "visible",
          "placement": "bottom"
        }
      }
    }
  ],
  "schemaVersion": 36,
  "version": 0,
  "weekStart": ""
}